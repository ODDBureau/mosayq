<resources>

    <!-- Base application theme. -->
    <style name="MosayqTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="MosayqTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!-- Popup Menu Text Color styles -->
    <style name="TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MosayqTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MosayqTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/mq_background_splash</item>
    </style>

</resources>
